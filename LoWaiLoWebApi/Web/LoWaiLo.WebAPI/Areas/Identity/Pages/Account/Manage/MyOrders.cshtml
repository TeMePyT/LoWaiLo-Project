@page
@model MyOrdersModel
@{
    ViewData["Title"] = "Моите поръчки";
}

<div class="container">
    <table class="table table-hover">
        <thead>
            <tr class="row">
                <th scope="col" class="col-2 d-flex justify-content-center">Номер</th>
                <th scope="col" class="col-3 d-flex justify-content-center">Дата</th>
                <th scope="col" class="col-2 d-flex justify-content-center">Статус</th>
                <th scope="col" class="col-3 d-flex justify-content-center">Цена</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
            <tr class="row">
                <td class="col-2 d-flex justify-content-center">
                    @order.OrderNumber
                </td>
                <td class="col-3 d-flex justify-content-center">
                    @order.CreatedOn
                </td>
                <td class="col-2 d-flex justify-content-center">
                    @order.Status
                </td>
                <td class="col-3 d-flex justify-content-center">
                    @order.TotalPrice лв.
                </td>
                <td class="col-md-2 d-flex justify-content-around">
                    <div class="mr-2">
                        <a asp-page="./OrderDetails" asp-route-id="@order.Id" class="btn btn-primary btn-sm"><span>Детайли</span></a>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
