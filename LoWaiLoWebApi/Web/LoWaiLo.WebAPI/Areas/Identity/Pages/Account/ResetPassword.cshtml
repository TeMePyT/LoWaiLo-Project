@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Подновяване на парола";
}
<div class="section">
    <h1>@ViewData["Title"]</h1>
    <h4>Подновете паролата си.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="Input.Email">Имейл</label>
                    <input asp-for="Input.Email" class="form-control" required>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Парола</label>
                    <input asp-for="Input.Password" class="form-control" required>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword">Потвърдете паролата</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" required>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary"><span>Поднови</span></button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="~/Views/Shared/Partials/_ValidationScriptsPartial.cshtml" />
}
