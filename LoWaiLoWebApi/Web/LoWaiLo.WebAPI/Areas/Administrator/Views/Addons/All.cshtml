@model AllAddonsViewModel
@{
    ViewData["Title"] = "Всички добавки";
}
<!-- Page Title -->
<div class="page-title bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 push-lg-4">
                <h3 class="mb-0 font-italic">Всички добавки</h3>
            </div>
        </div>
    </div>
</div>
<!-- Page Content -->
<div class="container mobile-fondsize-11">
    <table class="table table-hover">
        <thead>
            <tr class="row d-flex justify-content-around">
                <th scope="col" class="col-1 d-flex justify-content-center">#</th>
                <th scope="col" class="col-3 d-flex justify-content-center">Име</th>
                <th scope="col" class="col-1 d-flex justify-content-center">Описание</th>
                <th scope="col" class="col-2 d-flex justify-content-center">Цена</th>
                <th scope="col" class="col-5 d-flex justify-content-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var addon in Model.Addons)
            {
                <!-- Item -->
                <tr class="row d-flex justify-content-around">
                    <td class="col-1 d-flex justify-content-center">
                        @addon.Id
                    </td>
                    <td class="col-3 d-flex justify-content-center">
                        <a asp-area="" asp-controller="Menu" asp-action="Details" asp-route-id="@addon.Id">
                            @addon.Name
                        </a>
                    </td>
                    <td class="col-1 d-flex justify-content-center">
                        @(addon.Description)
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        @addon.Price лв.
                    </td>
                    <td class="col-md-5 d-flex justify-content-around">
                        <div class="mr-2">
                            <a asp-action="Edit" asp-route-id="@addon.Id" class="btn btn-outline-warning btn-sm mobile-fondsize-11"><span>Промени</span></a>
                        </div>
                        <div class="mr-2">
                            <a asp-action="Delete" asp-route-id="@addon.Id" class="btn btn-outline-primary btn-sm mobile-fondsize-11"><span>Изтрий</span></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>