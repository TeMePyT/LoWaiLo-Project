@model ShippedOrdersViewModel
@{
    ViewData["Title"] = "Изпратени поръчки";
}
<!-- Page Title -->
<div class="page-title bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 push-lg-4">
                <h3 class="mb-0">Изпратени поръчки</h3>
            </div>
        </div>
    </div>
</div>
<!-- Page Content -->
<div class="container">
    <div class="container mobile-fondsize-11 shadow pr-4 pl-4 pb-4 mb-4 bg-white">
        <div class="mobile-fondsize-20 h3 text-center text-muted font-italic pb-2">@ViewData["Title"]</div>
        <table class="table table-hover">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-md-2 col d-flex justify-content-center">Номер</th>
                    <th scope="col" class="col-md-2 col d-flex justify-content-center">Получена на</th>
                    <th scope="col" class="col-md-2 col d-flex justify-content-center">Приета на</th>
                    <th scope="col" class="col-md-2 col d-flex justify-content-center">Изпратена на</th>
                    <th scope="col" class="col-md-4 col d-flex justify-content-center"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.ShippedOrders)
                {
                <tr class="row">
                    <td class="col-md-2 col d-flex justify-content-center">
                        @order.OrderNumber
                    </td>
                    <td class="col-md-2 col d-flex justify-content-center">
                        @order.CreatedOn
                    </td>
                    <td class="col-md-2 col d-flex justify-content-center">
                        @order.ApprovedOn
                    </td>
                    <td class="col-md-2 col d-flex justify-content-center">
                        @order.ShippedOn
                    </td>
                    <td class="col-md-3 col d-flex justify-content-around">
                        <div class="mr-1">
                            <a asp-area="Administrator" asp-controller="Orders" asp-action="Cancel" asp-route-id="@order.Id" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" class="btn btn-primary btn-sm"><span>Отказана</span></a>
                        </div>
                        <div class="mr-1">
                            <a asp-area="Administrator" asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" class="btn btn-info btn-sm"><span>Детайли</span></a>
                        </div>
                        <div class="mr-1">
                            <a asp-area="Administrator" asp-controller="Orders" asp-action="Deliver" asp-route-id="@order.Id" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)" class="btn btn-warning btn-sm"><span>Доставена</span></a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        @if (Model.ShippedOrders.Count() == 0)
        {
            <div class="mobile-fondsize-11 h6 text-center font-italic">Нямате изпратени поръчки!</div>
        }
    </div>
</div>