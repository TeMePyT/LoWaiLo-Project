@model EditCategoryInputModel
@{
    ViewData["Title"] = "Промяна на категория";
}
<!-- Page Title -->
<div class="page-title bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 push-lg-4">
                <h3 class="mb-0 font-italic">Промяна на категория</h3>
            </div>
        </div>
    </div>
</div>
<!-- Page Content -->
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <section>
                <form method="post" asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id">
                    <h3 class="mobile-fondsize-20 text-muted">@ViewData["Title"]</h3>
                    <hr />
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Image"></label>
                        <input asp-for="@Model.Image" class="form-control" />
                        <span asp-validation-for="@Model.Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary"><span>Промени</span></button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="~/Views/Shared/Partials/_ValidationScriptsPartial.cshtml" />
}
