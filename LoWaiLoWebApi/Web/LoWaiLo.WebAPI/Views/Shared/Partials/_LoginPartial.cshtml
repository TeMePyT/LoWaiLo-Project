@using Microsoft.AspNetCore.Identity
@using LoWaiLo.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
     <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-user-circle fa-2x"></i></a>    
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" title="Login/Register" ><i class="fa fa-user-circle fa-2x"></i></a>
}