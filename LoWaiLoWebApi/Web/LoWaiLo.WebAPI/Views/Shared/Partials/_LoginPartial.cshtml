@using Microsoft.AspNetCore.Identity
@using LoWaiLo.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
     <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="fa fa-user-circle-o fa-2x"></a>    
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" title="Login/Register" class="fa fa-user-circle-o fa-2x"></a>
}